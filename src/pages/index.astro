/* Custom Earthject Brand Colors */
:root {
  --earthject-primary: #30602c;
  --earthject-accent: #ddaf27;
  --earthject-primary-light: #4a7c46;
  --earthject-primary-dark: #1e3d1b;
  --earthject-accent-light: #e8c04d;
  --earthject-accent-dark: #c49a1f;
}

/* Apply primary green to buttons and key elements */
.btn-primary, 
.bg-primary,
[data-aw-toggle-color-scheme] {
  background-color: var(--earthject-primary) !important;
  border-color: var(--earthject-primary) !important;
}

.btn-primary:hover {
  background-color: var(--earthject-primary-dark) !important;
  border-color: var(--earthject-primary-dark) !important;
}

/* Apply accent gold to highlights and secondary elements */
.text-accent,
.highlight {
  color: var(--earthject-accent) !important;
}

.btn-accent,
.bg-accent {
  background-color: var(--earthject-accent) !important;
  border-color: var(--earthject-accent) !important;
  color: var(--earthject-primary-dark) !important;
}

.btn-accent:hover {
  background-color: var(--earthject-accent-dark) !important;
  border-color: var(--earthject-accent-dark) !important;
}

/* Custom styling for hero section */
.hero-earthject {
  background: linear-gradient(135deg, var(--earthject-primary) 0%, var(--earthject-primary-light) 100%);
}

/* Custom green backgrounds */
.bg-green-earthject {
  background-color: var(--earthject-primary);
}

.bg-green-light-earthject {
  background-color: #f0f9f0;
}

/* Custom link colors */
a.text-earthject {
  color: var(--earthject-primary);
}

a.text-earthject:hover {
  color: var(--earthject-primary-dark);
}

/* Stats section custom styling */
.stats-earthject .stat-number {
  color: var(--earthject-accent);
  font-weight: 700;
}

/* Custom icons with brand colors */
.icon-earthject {
  color: var(--earthject-primary);
}

.icon-accent-earthject {
  color: var(--earthject-accent);
}

/* Navigation customization */
.navbar-earthject {
  background-color: rgba(48, 96, 44, 0.95);
  backdrop-filter: blur(10px);
}

/* Footer customization */
.footer-earthject {
  background-color: var(--earthject-primary-dark);
}

.footer-earthject a {
  color: #ffffff;
  opacity: 0.8;
}

.footer-earthject a:hover {
  color: var(--earthject-accent);
  opacity: 1;
}

/* Social media icons */
.social-earthject {
  color: var(--earthject-accent);
  transition: all 0.3s ease;
}

.social-earthject:hover {
  color: var(--earthject-accent-light);
  transform: translateY(-2px);
}

/* Card styling for projects */
.project-card-earthject {
  border: 2px solid transparent;
  transition: all 0.3s ease;
}

.project-card-earthject:hover {
  border-color: var(--earthject-accent);
  transform: translateY(-4px);
  box-shadow: 0 10px 30px rgba(48, 96, 44, 0.1);
}
